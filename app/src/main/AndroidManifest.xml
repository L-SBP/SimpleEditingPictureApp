<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Android 13 (API 33)及以上需要的权限 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    
    <!-- 兼容 Android 12及以下 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" /> <!-- 限制旧权限只在 Android 12及以下生效 -->

    <!-- 仅在 Android 10及以下需要写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleEditingPictureApp">
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:clearTaskOnLaunch="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- MainActivity作为应用主界面，使用singleTask模式确保只有一个实例 -->
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:clearTaskOnLaunch="false" />
            
        <!-- GalleryActivity使用standard模式，可以多次创建实例 -->
        <activity
            android:name=".activity.GalleryActivity"
            android:launchMode="standard"
            android:parentActivityName=".activity.MainActivity" />
            
        <!-- EditorActivity使用singleTask模式，编辑完成后直接返回MainActivity -->
        <activity
            android:name=".activity.EditorActivity"
            android:launchMode="singleTask"
            android:clearTaskOnLaunch="false"
            android:parentActivityName=".activity.MainActivity" />
            
        <!-- ProfileActivity使用standard模式，可以多次创建实例 -->
        <activity
            android:name=".activity.ProfileActivity"
            android:launchMode="standard"
            android:parentActivityName=".activity.MainActivity" />
    </application>

</manifest>