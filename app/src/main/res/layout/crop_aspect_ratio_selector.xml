<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/light_orange"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="裁剪比例"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/btn_aspect_free"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="自由"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/aspect_ratio_selector_bg"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_aspect_1_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="1:1"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/aspect_ratio_selector_bg"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_aspect_3_4"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:text="3:4"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/aspect_ratio_selector_bg"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_aspect_4_3"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="4:3"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/aspect_ratio_selector_bg"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_aspect_9_16"
                android:layout_width="70dp"
                android:layout_height="120dp"
                android:text="9:16"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/aspect_ratio_selector_bg"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_aspect_16_9"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:text="16:9"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/aspect_ratio_selector_bg"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>